! tty -s && return  # Guard against non interactive shells.

stty erase ^H intr ^C kill ^U start ^Q stop ^S susp ^Z eof ^D
set -o emacs
umask 027

export EDITOR=vim
export FCEDIT=${EDITOR}
export HISTCONTROL=$HISTCONTROL${HISTCONTROL+,}ignoredups
export HISTIGNORE=$'[ \t]*:&:[fb]g:exit:ls' # Ignore the ls command as well
export MANWIDTH=90
export SERI_EDITOR=${EDITOR}
export TERM=${TERM:-xterm}


if [[ -f "${HOME}/.bash_aliases" ]]
then
	source "${FILE_SCRIPT_GIT}"
	source "${HOME}/.bash_aliases"
fi


if [[ -f "${FILE_SCRIPT_PROMPT}" ]]
then
    source "${FILE_SCRIPT_PROMPT}"
else
	H=$(hostname)
	# Pick your favorite PS1
		export PS1="$LOGNAME@${H%%.*}\$ "
fi


if [[ -z "$BASH_COMPLETION" ]]
then
		export BASH_COMPLETION=$HOME/bash_completion/bash_completion
fi
if [[ -f "$BASH_COMPLETION" ]]
then
		source $BASH_COMPLETION
else
	unset BASH_COMPLETION
fi


if command -v tmux>/dev/null
then
	[[ ! $TERM =~ screen ]] && [ -z "$TMUX" ] && tmux new -A -s main
fi


if [[ -f "${HOME}/ws/.venv/bin/activate" ]]
then
	source "${HOME}/ws/.venv/bin/activate"
fi